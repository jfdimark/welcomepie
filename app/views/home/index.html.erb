
<div class="row-fluid">
	<div class="span5 offset1">
		<div class="UserProfile">

			<% if user_signed_in? %>

			<h3>Hello <%= current_user.name %>!</h3>

		</div>
	</div>
	
	<div class="span5">
		<div class="MemberDisplay">

				<%= render partial: 'index_profiles' %>

			<% else %>

			<h3>Please sign up <%= link_to 'here', new_user_registration_path %></h3>

			<% end %> 


		</div>
	</div>
</div>